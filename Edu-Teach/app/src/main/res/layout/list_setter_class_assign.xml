<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/mainMenuButtonPadding">

    <com.finalyearproject.edu_teach.ChalkTextView
        android:id="@+id/classItemCount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="@dimen/one"
        android:textColor="@color/white"
        android:textSize="@dimen/clickableTextView">

    </com.finalyearproject.edu_teach.ChalkTextView>

    <com.finalyearproject.edu_teach.ChalkTextView
        android:id="@+id/classItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:padding="@dimen/one"

        android:textColor="@color/white"
        android:textSize="@dimen/clickableTextView">

    </com.finalyearproject.edu_teach.ChalkTextView>

    <com.finalyearproject.edu_teach.ChalkTextView
        android:id="@+id/subjectItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:padding="@dimen/one"

        android:textColor="@color/white"
        android:textSize="@dimen/clickableTextView">

    </com.finalyearproject.edu_teach.ChalkTextView>

</LinearLayout>